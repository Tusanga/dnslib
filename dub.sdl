name					"dnslib"
description				"A DNS lookup library and command-line application."
authors					"Adam Williams"
copyright				"Copyright Â© 2020-2023, Adam Williams"
license					"MIT"

dependency				"vibe-core"		version="~>1.9"

configuration "lib" {
   targetType			"library"
   //lflags				"-L/usr/local/lib/"
   targetPath			"lib"
   sourcePaths			"source/"
   excludedSourceFiles	"source/app.d"
   versions				"ENABLE_TLS"

   dependency			"vibe-d:stream"	version="~>0.9"
   dependency			"vibe-d:tls"	version="~>0.9"
   subConfiguration		"vibe-d:tls"	"openssl-1.1"
}

configuration "lib-ssl3" {
   targetType			"library"
   //lflags				"-L/usr/local/lib/"
   targetPath			"lib"
   sourcePaths			"source/"
   excludedSourceFiles	"source/app.d"
   versions				"ENABLE_TLS"

   dependency			"vibe-d:stream"	version="~>0.9"
   dependency			"vibe-d:tls"	version="~>0.9"
   subConfiguration		"vibe-d:tls"	"openssl"
}

configuration "lib-no-tls" {
   targetType			"library"
   //lflags				"-L/usr/local/lib/"
   targetPath			"lib"
   sourcePaths			"source/"
   excludedSourceFiles	"source/app.d"
}

configuration "app" {
   targetType			"executable"
   targetName			"dnslookup"
   mainSourceFile		"source/app.d"
   versions				"ENABLE_TLS"

   dependency			"vibe-d:stream"	version="~>0.9"
   dependency			"vibe-d:tls"	version="~>0.9"
   subConfiguration		"vibe-d:tls"	"openssl-1.1"
}

configuration "app-ssl3" {
   targetType			"executable"
   targetName			"dnslookup"
   mainSourceFile		"source/app.d"
   versions				"ENABLE_TLS"

   dependency			"vibe-d:stream"	version="~>0.9"
   dependency			"vibe-d:tls"	version="~>0.9"
   subConfiguration		"vibe-d:tls"	"openssl"
}

configuration "app-no-tls" {
   targetType			"executable"
   targetName			"dnslookup"
   mainSourceFile		"source/app.d"
}
